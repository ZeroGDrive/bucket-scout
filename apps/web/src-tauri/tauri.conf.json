{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "S3 Browser",
  "version": "0.1.0",
  "identifier": "com.zerogdrive.s3-browser",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3002",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "S3 Browser",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0Mjg0MkY0MkZCMzZGMTAKUldRUWI3TXY5RUlvRk5oNWNlYTRKamFBQUMxcCtOUkVQejZCZXZab1VFWXJGcEd0WDZ4bE95Y0kK",
      "endpoints": [
        "https://github.com/ZeroGDrive/s3-browser/releases/latest/download/latest.json"
      ]
    }
  }
}
