{
  "name": "bucket-scout",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.3.5",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@bucket-scout/env": "workspace:*",
    "@unpic/react": "^1.0.2",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@bucket-scout/config": "workspace:*",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
